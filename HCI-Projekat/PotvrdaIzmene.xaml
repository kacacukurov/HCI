<Window x:Class="HCI_Projekat.PotvrdaIzmene"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_Projekat"
        mc:Ignorable="d"
        Title="PotvrdaIzmene" Height="300" Width="300">
    <Grid>
        
        <TextBlock Width="250" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Margin="0,20,0,0" Name="PorukaBrisanja"/>
        
        <Button Width="60" Height="20" Content="Odustani" Click="cancelClick" Name="noDeleteButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,80,80,10" Background="DarkRed" Foreground="White">
        </Button>
        <Button Width="60" Height="20" Content="Potvrdi" Click="finishClick" Name="yesDeleteButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,80,10,10" Background="DarkGreen" Foreground="White">
        </Button>
    </Grid>
</Window>
