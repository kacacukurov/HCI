                                        <ColumnDefinition Width="9*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3.5*"/>
                                        <RowDefinition Height="12*"/>
                                        <RowDefinition Height="5*"/>
